<svg width="360" height="360" xmlns="http://www.w3.org/2000/svg">

    <rect x="0" y="0" width="360" height="360" fill="@ComponentSettings.BG_Color">

    </rect>

    @if (ComponentSettings.SelectedCircles_List.Count > 1)
    {
        <ChildLine @ref="ChildLine1"></ChildLine>
    }


    @for (int i = 0; i < ComponentSettings.CountHorizontal; i++)
    {
        @for (int j = 0; j < ComponentSettings.CountVertical; j++)
        {
            <ChildCircle ActionClicked="@Clicked" par_i="i" par_j="j"></ChildCircle>

        }
    }



</svg>

