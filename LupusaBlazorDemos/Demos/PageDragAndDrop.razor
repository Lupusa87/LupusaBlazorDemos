@page "/PageDragAndDrop"


<h3 style="color:darkred">This is blazor drag and drop demo</h3>

<br />

<h5>You can try to drag item to anoter container</h5>



<style>

    .draggable2 {
        border: 1px solid #ccc;
        border-radius: 5px;
        margin: 1rem;
        padding: 1rem;
        display: inline-block;
        cursor: move;
    }

    .droptarget2 {
        border: 1px dashed #ebebeb;
        margin: 1rem;
        padding: 1rem;
        display: inline-block;
    }
</style>


<table>
    <tr>
        @foreach (var itemParent in listDragTarget)
        {
            <td valign="top" width="400" border="1" align="left">

                <div id="@itemParent.ElementID" ondragover="event.preventDefault()" dropzone="move" class="droptarget2">
                    @foreach (var item in listDraggable.Where(x => x.ParentID == itemParent.ID))
                    {
                        <div id="@item.ElementID" class="draggable2" @onmousedown="@(e => OnMouseDown(e, item))" style="line-height:25px" draggable="true">
                            @item.ID @item.Name
                        </div>

                    }

                </div>
            </td>

        }

    </tr>
</table>
